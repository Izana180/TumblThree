<UserControl x:Class="TumblThree.Presentation.Views.DetailsAllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:TumblThree.Presentation.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:TumblThree.Presentation.Controls"
             xmlns:dd="clr-namespace:TumblThree.Presentation.DesignData"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:Models="clr-namespace:TumblThree.Domain.Models;assembly=TumblThree.Domain"
             xmlns:Extensions="clr-namespace:TumblThree.Presentation.Extensions"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance dd:SampleDetailsViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="720" d:DesignWidth="400" Background="{StaticResource DefaultBackground}">

    <UserControl.Resources>
        <ObjectDataProvider MethodName="GetValues"
        ObjectType="{x:Type sys:Enum}"
        x:Key="TumblrBlogCrawlerTypes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:TumblrBlogCrawlerTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <sys:Double x:Key="RowSpace">4</sys:Double>
    </UserControl.Resources>

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="{x:Static p:Resources.SelectABlog}" BorderThickness="0,0,0,1" Padding="15,7" Grid.Row="0">
            <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding BlogAll}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label Content="{Binding Count}" ContentStringFormat="{x:Static p:Resources.ShowItems}"
               BorderThickness="0,0,0,1" BorderBrush="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
               Padding="15,7" Grid.Row="0">
            <Label.Resources>
                <sys:Int32 x:Key="multiSelection">1</sys:Int32>
            </Label.Resources>
            <Label.ToolTip>
                <ctrl:SuperToolTip Title="{Binding BlogAll.Name}"
                                   Description="{Binding BlogAll.Url}" />
            </Label.ToolTip>
            <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <DataTrigger Value="True">
                            <DataTrigger.Binding>
                                <MultiBinding Converter="{StaticResource IsLessThanConverter}">
                                    <Binding Path="Count" />
                                    <Binding Source="{StaticResource multiSelection}" />
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label Content="{Binding BlogAll.Name}" BorderThickness="0,0,0,1"
               BorderBrush="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Padding="15,7" Grid.Row="0">
            <Label.ToolTip>
                <ctrl:SuperToolTip Title="{Binding BlogAll.Name}"
                                   Description="{Binding BlogAll.Url}" />
            </Label.ToolTip>
            <Label.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding CopyUrlCommand}" Header="{x:Static p:Resources.CopyUrl}" />
                </ContextMenu>
            </Label.ContextMenu>
            <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Count}" Value="1">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid Margin="11">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.LargeRowSpace}" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Content="{x:Static p:Resources.Name}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" />
                <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="0">
                    <TextBlock Text="{Binding BlogAll.Name}" TextTrimming="CharacterEllipsis" />
                </Label>

                <Label Content="{x:Static p:Resources.Url}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" />
                <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="2">
                    <TextBlock Text="{Binding BlogAll.Url}" TextTrimming="CharacterEllipsis" />
                </Label>
                <Label Content="{x:Static p:Resources.Progress}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" />
                <ProgressBar Value="{Binding BlogAll.Progress, Mode=OneWay}" Height="15" Minimum="0" Maximum="100"
                             Foreground="{StaticResource ActiveForeground}" Grid.Column="3" Grid.ColumnSpan="5"
                             Grid.Row="4" />

                <Label Content="{x:Static p:Resources.Rating}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" />
                <ctrl:Rating Value="{Binding BlogAll.Rating, Converter={StaticResource RatingToStarsConverter}}"
                             Padding="2,0" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="6" TickPlacement="TopLeft" />

                <Separator Grid.ColumnSpan="7" Grid.Column="0" Grid.Row="8" Margin="0" />
                <TabControl x:Name="Tabs" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="10" SelectedIndex="{Binding BlogAll.SettingsTabIndex}" Background="{StaticResource DefaultBackground}">
                    <TabItem Header="{x:Static p:Resources.BlogSettings}">
                        <Grid Margin="0">
                            <Grid.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                </Style>
                                <sys:Int32 x:Key="duplicatesZero">0</sys:Int32>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{StaticResource Layout.RowSpace}"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{StaticResource Layout.RowSpace}"/>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                            </Grid.RowDefinitions>

                            <Label Content="{x:Static p:Resources.Posts}" Grid.Column="0" Grid.ColumnSpan="2"
                           Grid.Row="0" />
                            <Label Content="{Binding BlogAll.Posts, Converter={StaticResource IntToDisplayValueConverter}}"
                               Margin="3,0,0,0" Grid.Column="1" Grid.Row="0" />

                            <CheckBox Content="{x:Static p:Resources.DownloadImages}"
                                  IsChecked="{Binding BlogAll.DownloadPhoto, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadPhotoDiff, Mode=OneWay, IsAsync=True}" 
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="2" Padding="0" Margin="3,0,0,0" >
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedPhotos" />
                                        <Binding Path="BlogAll.Photos" />
                                        <Binding Path="BlogAll.DuplicatePhotos" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <CheckBox Content="{x:Static p:Resources.DownloadAudios}"
                                  IsChecked="{Binding BlogAll.DownloadAudio, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadAudioDiff, Mode=OneWay, IsAsync=True}" 
                                  Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}" 
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="4" Padding="0" Margin="3,0,0,0" 
                                   Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedAudios" />
                                        <Binding Path="BlogAll.Audios" />
                                        <Binding Path="BlogAll.DuplicateAudios" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <StackPanel Grid.Column="0" Grid.Row="5" Height="{StaticResource RowSpace}"
                                Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs,Converter={StaticResource BoolToVisibilityConverter}}" />

                            <CheckBox Content="{x:Static p:Resources.DownloadVideosShort}"
                                  IsChecked="{Binding BlogAll.DownloadVideo, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadVideoDiff, Mode=OneWay, IsAsync=True}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="6" Padding="0" Margin="3,0,0,0" >
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedVideos" />
                                        <Binding Path="BlogAll.Videos" />
                                        <Binding Path="BlogAll.DuplicateVideos" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <CheckBox Content="{x:Static p:Resources.DownloadTexts}"
                                  IsChecked="{Binding BlogAll.DownloadText, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadTextDiff, Mode=OneWay, IsAsync=True}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Margin="3,0,0,0" Padding="3,0,0,0" Grid.Row="8">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="8" Padding="0" Margin="3,0,0,0" >
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedTexts" />
                                        <Binding Path="BlogAll.Texts" />
                                        <Binding Source="{StaticResource duplicatesZero}" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <CheckBox Content="{x:Static p:Resources.DownloadConversations}"
                                  IsChecked="{Binding BlogAll.DownloadConversation, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadConversationDiff, Mode=OneWay}"
                                  Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="10" Padding="0" Margin="3,0,0,0" 
                                   Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs,Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedConversations" />
                                        <Binding Path="BlogAll.Conversations" />
                                        <Binding Source="{StaticResource duplicatesZero}" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <StackPanel Grid.Column="0" Grid.Row="11" Height="{StaticResource RowSpace}"
                                Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs,Converter={StaticResource BoolToVisibilityConverter}}" />

                            <CheckBox Content="{x:Static p:Resources.DownloadQuotes}"
                                  IsChecked="{Binding BlogAll.DownloadQuote, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadQuoteDiff, Mode=OneWay}"
                                  Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="12" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="12" Padding="0" Margin="3,0,0,0" 
                                   Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedQuotes" />
                                        <Binding Path="BlogAll.Quotes" />
                                        <Binding Source="{StaticResource duplicatesZero}" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <StackPanel Grid.Column="0" Grid.Row="13" Height="{StaticResource RowSpace}"
                                Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs,Converter={StaticResource BoolToVisibilityConverter}}" />

                            <CheckBox Content="{x:Static p:Resources.DownloadLinks}"
                                  IsChecked="{Binding BlogAll.DownloadLink, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadLinkDiff, Mode=OneWay}"
                                  Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="14" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="14" Padding="0" Margin="3,0,0,0" 
                                   Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedLinks" />
                                        <Binding Path="BlogAll.NumberOfLinks" />
                                        <Binding Source="{StaticResource duplicatesZero}" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <StackPanel Grid.Column="0" Grid.Row="15" Height="{StaticResource RowSpace}"
                                Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs,Converter={StaticResource BoolToVisibilityConverter}}" />

                            <CheckBox Content="{x:Static p:Resources.DownloadAnswers}"
                                  IsChecked="{Binding BlogAll.DownloadAnswer, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadAnswerDiff, Mode=OneWay}"
                                  Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="16" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="16" Padding="0" Margin="3,0,0,0" 
                                   Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogAll.DownloadedAnswers" />
                                        <Binding Path="BlogAll.Answers" />
                                        <Binding Source="{StaticResource duplicatesZero}" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <StackPanel Grid.Column="0" Grid.Row="17" Height="{StaticResource RowSpace}"
                                Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs,Converter={StaticResource BoolToVisibilityConverter}}" />

                            <CheckBox Content="{x:Static p:Resources.DownloadImageMeta}"
                                  IsChecked="{Binding BlogAll.CreatePhotoMeta, Mode=TwoWay}" IsThreeState="{Binding BlogAll.CreatePhotoMetaDiff, Mode=OneWay}"
                                  Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="18" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
