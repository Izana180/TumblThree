                        </Grid>
                    </TabItem>
                    <TabItem Header="{x:Static p:Resources.ExternalSettings}"
                             Visibility="{Binding BlogAll.SelectionContainsTumblrBlogs, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid Margin="0">
                            <Grid.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                            </Grid.RowDefinitions>
                            <CheckBox Content="{x:Static p:Resources.DownloadImgur}"
                                  IsChecked="{Binding BlogAll.DownloadImgur, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadImgurDiff, Mode=OneWay}" 
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="3,3,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadImgur}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDownloadImgurDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <CheckBox Content="{x:Static p:Resources.DownloadWebmshare}"
                                  IsChecked="{Binding BlogAll.DownloadWebmshare, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadWebmshareDiff, Mode=OneWay}" 
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadWebmshare}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDownloadWebmshareDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
                            <ComboBox Grid.Column="3" Grid.Row="2" Padding="5,0,5,0"
                              IsEnabled="{Binding BlogAll.DownloadWebmshareDiff, Converter={StaticResource InverseBooleanConverter}, Mode=OneWay}"
                              ItemsSource="{Binding Source={Extensions:EnumBindingSource {x:Type Models:WebmshareTypes}}}" SelectedValuePath="."
                              SelectedValue="{Binding BlogAll.WebmshareType}"
                              SelectedItem="{Binding BlogAll.WebmshareType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <ComboBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipWebmshareFiletype}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipWebmshareFiletypeDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>
                            <CheckBox Content="{x:Static p:Resources.DownloadUguu}"
                                      IsChecked="{Binding BlogAll.DownloadUguu, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadUguuDiff, Mode=OneWay}" 
                                      Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadUguu}" />
                                            <TextBlock xml:space="preserve"
                                                       Text="{x:Static p:Resources.ToolTipDownloadUguuDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
                            <ComboBox Grid.Column="3" Grid.Row="5" Padding="5,0,5,0"
                                      IsEnabled="{Binding BlogAll.DownloadUguuDiff, Converter={StaticResource InverseBooleanConverter}, Mode=OneWay}"
                                      ItemsSource="{Binding Source={Extensions:EnumBindingSource {x:Type Models:UguuTypes}}}" SelectedValuePath="."
                                      SelectedValue="{Binding BlogAll.UguuType}"
                                      SelectedItem="{Binding BlogAll.UguuType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <ComboBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipUguuFiletype}" />
                                            <TextBlock xml:space="preserve"
                                                       Text="{x:Static p:Resources.ToolTipUguuFiletypeDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>
                            <CheckBox Content="{x:Static p:Resources.DownloadCatBox}"
                                      IsChecked="{Binding BlogAll.DownloadCatBox, Mode=TwoWay}" IsThreeState="{Binding BlogAll.DownloadCatBoxDiff, Mode=OneWay}" 
                                      Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="9" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadCatBox}" />
                                            <TextBlock xml:space="preserve"
                                                       Text="{x:Static p:Resources.ToolTipDownloadCatBoxDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
                            <ComboBox Grid.Column="3" Grid.Row="9" Padding="5,0,5,0"
                                      IsEnabled="{Binding BlogAll.DownloadCatBoxDiff, Converter={StaticResource InverseBooleanConverter}, Mode=OneWay}"
                                      ItemsSource="{Binding Source={Extensions:EnumBindingSource {x:Type Models:CatBoxTypes}}}" SelectedValuePath="."
                                      SelectedValue="{Binding BlogAll.CatBoxType}"
                                      SelectedItem="{Binding BlogAll.CatBoxType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <ComboBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipCatBoxFiletype}" />
                                            <TextBlock xml:space="preserve"
                                                       Text="{x:Static p:Resources.ToolTipCatBoxFiletypeDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>
                        </Grid>
                    </TabItem>
                    <TabItem Header="{x:Static p:Resources.Preview}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <UserControl x:Name="Preview" Width="Auto" Height="Auto" Grid.Column="0"  Grid.Row="0" MouseDown="Preview_OnMouseDown">
                                <Grid>
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="SwitchableStates">
                                            <VisualState x:Name="Photo" />
                                            <VisualState x:Name="Video">
                                                <Storyboard>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwitchableImage"
                                                                       Storyboard.TargetProperty="Visibility"
                                                                       Duration="0">
                                                        <DiscreteObjectKeyFrame KeyTime="0">
                                                            <DiscreteObjectKeyFrame.Value>
                                                                <Visibility>Collapsed</Visibility>
                                                            </DiscreteObjectKeyFrame.Value>
                                                        </DiscreteObjectKeyFrame>
                                                    </ObjectAnimationUsingKeyFrames>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwitchableMediaElement"
                                                                       Storyboard.TargetProperty="Visibility"
                                                                       Duration="0">
                                                        <DiscreteObjectKeyFrame KeyTime="0">
                                                            <DiscreteObjectKeyFrame.Value>
                                                                <Visibility>Visible</Visibility>
                                                            </DiscreteObjectKeyFrame.Value>
                                                        </DiscreteObjectKeyFrame>
                                                    </ObjectAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <MediaElement Visibility="Collapsed" x:Name="SwitchableMediaElement"
                                      Source="{Binding BlogAll.LastDownloadedVideo, Converter={StaticResource NullImageConverter}, IsAsync=True}"
                                      Stretch="Fill" IsMuted="True" LoadedBehavior="Play" UnloadedBehavior="Close" />
                                    <Image Visibility="Visible" x:Name="SwitchableImage"
                               Source="{Binding BlogAll.LastDownloadedPhoto, Converter={StaticResource NullImageConverter}, IsAsync=True}"
                               Stretch="Fill" />
                                    <i:Interaction.Triggers>
                                        <ei:DataTrigger Binding="{Binding BlogAll.States}" Value="{Binding BlogAll.States}">
                                            <ei:GoToStateAction StateName="{Binding BlogAll.States}" />
                                        </ei:DataTrigger>
                                    </i:Interaction.Triggers>
                                </Grid>
                            </UserControl>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </ScrollViewer>
        <Border Height="21" Grid.Row="2" Background="{StaticResource DarkBackground}" BorderThickness="0">
            <TextBlock Text="{x:Static p:Resources.Error}" Foreground="{StaticResource DarkErrorForeground}"
                       Margin="7,0" VerticalAlignment="Center">
            </TextBlock>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding BlogFile.LoadError}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <Border Height="2" Grid.Row="2" VerticalAlignment="Top" Background="{StaticResource ErrorForeground}"
                BorderThickness="0">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding BlogAll.LoadError}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
    </Grid>
</UserControl>
