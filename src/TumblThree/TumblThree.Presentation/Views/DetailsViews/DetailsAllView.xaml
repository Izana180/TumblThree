                                      Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="62" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipForceRescan}" />
